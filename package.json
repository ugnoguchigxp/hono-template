{
  "name": "hono-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format .",
    "format:write": "biome format . --write",
    "check": "pnpm typecheck && pnpm lint && pnpm test:run",
    "db:generate": "pnpm --filter @adapters/db-drizzle generate",
    "db:migrate": "pnpm --filter @adapters/db-drizzle migrate",
    "db:studio": "pnpm --filter @adapters/db-drizzle studio",
    "dev": "pnpm --filter @apps/api dev",
    "start": "pnpm --filter @apps/api start"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/bun": "^1.0.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "@biomejs/biome": "^1.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
